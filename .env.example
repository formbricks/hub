# Formbricks Hub Configuration
# Copy this file to .env and update the values as needed

# API Key for authentication (required)
# This key is used to authenticate requests to protected endpoints
# The server will fail to start if this is not set
API_KEY=your-secret-api-key-here

# Database connection URL (optional)
# Default: postgres://postgres:postgres@localhost:5432/test_db?sslmode=disable
# Format: postgres://username:password@host:port/database?sslmode=disable
DATABASE_URL=postgres://postgres:postgres@localhost:5432/test_db?sslmode=disable

# HTTP server port (optional)
# Default: 8080
PORT=8080

# Logging level (optional)
# Default: info
# Valid values: debug, info, warn, error
LOG_LEVEL=info

# Formbricks Connector Configuration (for cmd/connectors)
# Formbricks API base URL (optional)
# Default: https://app.formbricks.com/api/v2
FORMBRICKS_URL=https://app.formbricks.com/api/v2

# Formbricks API key (required for connectors)
FORMBRICKS_API_KEY=your-formbricks-api-key-here

# Formbricks Survey ID (required for connectors)
# The survey ID to poll for responses
FORMBRICKS_SURVEY_ID=your-survey-id-here
